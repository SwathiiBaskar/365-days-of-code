	cout<<endl<<endl;
	print8(n);
	cout<<endl<<endl;
	print9(n);
	cout<<endl<<endl;
	print10(n);
	cout<<endl<<endl;
	print11(n);
	cout<<endl<<endl;
	print12(n);
	cout<<endl<<endl;
	print13(n);
	cout<<endl<<endl;
	print14(n);
	cout<<endl<<endl;
	print15(n);
	cout<<endl<<endl;
	print16(n);
	cout<<endl<<endl;
	print17(n);
	cout<<endl<<endl;
	print18(n);
	cout<<endl<<endl;
	print19(n);
	cout<<endl<<endl;
	print20(n);
	cout<<endl<<endl;
	print21(n);
	cout<<endl<<endl;
	print22(n);
	cout<<endl<<endl;
}
